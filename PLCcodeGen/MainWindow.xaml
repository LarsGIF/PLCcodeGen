<Window x:Class="PLCcodeGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLCcodeGen"
        mc:Ignorable="d"
        Title="PLC Code Gen" 
        Height="450" 
        Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="300*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="600*"/>
        </Grid.ColumnDefinitions>

        <Menu Name="Menu" Grid.Row="0"  Grid.ColumnSpan="2" Margin="0,0,0,0">
            <MenuItem Header="_File">
                <MenuItem Header="_New..." Click="NewProject_Click"/>
                <MenuItem Header="_Open..." Click="Open_Click"/>
                <MenuItem Header="_Close" Click="Close_Click"/>
                <MenuItem Header="_Save" Click="Save_Click"/>
                <MenuItem Header="_Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Add _Cell" Click="AddCell_Click"/>
                <MenuItem Header="Add _Station"/>
                <MenuItem Header="Add _Item"/>
            </MenuItem>
            <MenuItem Header="_View">
            </MenuItem>
            <MenuItem Header="_Library">
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Help"/>
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>

        <TreeView Name="projectTree" Grid.Row="1" Grid.Column="0">
            <TreeView.Resources>
                <HierarchicalDataTemplate 
                    DataType="{x:Type local:Project}" ItemsSource="{Binding Cells}">
                    <!--ItemsSource="{Binding Source={x:Static Application.Current} , Path=MyProjects}"-->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding LineName}"/>
                        <TextBlock Text=", PLC:"/>
                        <TextBlock Text="{Binding PlcName}"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
                <HierarchicalDataTemplate DataType="{x:Type local:Cell}" ItemsSource="{Binding Stations}">
                    <TextBlock Text="{Binding Name}"/>
                </HierarchicalDataTemplate>
                <HierarchicalDataTemplate DataType="{x:Type local:Station}" ItemsSource="{Binding EquipItems}">
                    <TextBlock Text="{Binding Name}"/>
                </HierarchicalDataTemplate>
                <HierarchicalDataTemplate DataType="{x:Type local:EquipItem}" ItemsSource="{Binding FBlocks}">
                    <TextBlock Text="{Binding Name}"/>
                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type local:FuncBlock}">
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>

        <ScrollViewer Grid.Row="1" Grid.Column="1">
            <Viewbox>
                <Canvas Name="Layout" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        MinWidth="670" 
                        MinHeight="380" 
                        Height="Auto" 
                        Width="Auto"/>
            </Viewbox>
        </ScrollViewer>
    </Grid>
</Window>
